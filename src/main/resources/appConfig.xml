<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="memberService" class="springCorePrinciples.basic.member.MemberServiceImpl">
        <constructor-arg ref="memberRepository"/>
    </bean>

    <bean id="memberRepository" class="springCorePrinciples.basic.member.MemoryMemberRepository"/>

    <bean id="orderService" class="springCorePrinciples.basic.order.OrderServiceImpl">
        <constructor-arg ref="memberRepository"/>
        <constructor-arg ref="discountPolicy"/>
    </bean>

    <bean id="discountPolicy" class="springCorePrinciples.basic.discount.RateDiscountPolicy"/>
</beans>